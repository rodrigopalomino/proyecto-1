        const textValue = a.textContent || a.innerText;

        if (textValue.toUpperCase().indexOf(filtro) > -1) {
          lis[i].style.display = "";
          boxSearch.style.display = "block";
          if (event.target.value===""){
            boxSearch.style.display="none"
          }
        } else {
          lis[i].style.display = "none";
        }
